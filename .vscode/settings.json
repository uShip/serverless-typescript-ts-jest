{
    "files.exclude": {
        "**/.webpack": true,
        "**/coverage": true,
        "**/node_modules": true,
        "**/reports": true,
        "**/.lib": true,
        "**/debug": true,
        "**/.serverless": true
    },
    "typescript.surveys.enabled": false,
    "eslint.alwaysShowStatus": true,
    "eslint.options": { "configFile": ".eslintrc.js" },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        { "language": "typescript", "autoFix": true },
        { "language": "typescriptreact", "autoFix": true }
    ],
    "editor.formatOnSave": true
}
