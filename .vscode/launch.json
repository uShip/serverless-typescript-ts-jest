    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Serverless",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debug"],
            "outFiles": ["${workspaceFolder}/.lib/**/*.js"],
            "port": 9229,
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
            "args": ["--config", "${workspaceRoot}\\config\\jest.debug.json", "--runInBand"],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/debug/**/*"],
            "postDebugTask": "rimraf"
        }
    ]
}
