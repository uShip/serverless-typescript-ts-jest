{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "noUnusedLocals": true,
        "outDir": "../debug",
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "moduleResolution": "node"
    },
    "exclude": ["node_modules"],
    "include": ["../src/**/*.ts", "../__tests__/**/*.ts"]
}
